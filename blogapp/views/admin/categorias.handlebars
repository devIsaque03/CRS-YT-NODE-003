<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

<!-- <pre>{{json categorias}}</pre>  Para debugar a variável 'categorias' -->

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{this.nome}}</h4> <!-- Usando 'this' para garantir que estamos acessando a propriedade correta -->
            <small>Slug: {{this.slug}}</small> <br>
            <small>Data de criação: {{this.date}}</small> <br>
            <a href="/admin/categorias/edit/{{this._id}}"><button class="btn btn-success mt-4">Editar Categoria</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{this._id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <div class="alert alert-info mt-2">
        Não há categorias registrada!
    </div>
{{/each}}
