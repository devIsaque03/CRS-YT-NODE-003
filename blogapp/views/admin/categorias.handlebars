<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

<!-- <pre>{{json categorias}}</pre> Para debugar a variável 'categorias' -->

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{this.nome}}</h4> <!-- Usando 'this' para garantir que estamos acessando a propriedade correta -->
            <small>Slug: {{this.slug}}</small> <br>
            <small>Data de criação: {{this.date}}</small>
        </div>
    </div>
{{else}}
    <div class="alert alert-info">
        Não há categorias cadastradas.
    </div>
{{/each}}
