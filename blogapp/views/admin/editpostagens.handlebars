{{#if erros}} <!-- Verifica se há erros antes de começar a iterar -->
    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{/each}}
{{/if}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagens/edit" method="POST">
            <input type="hidden" value="{{this.postagem._id}}" name="id">

            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control" value="{{this.postagem.titulo}}" required>
            
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{this.postagem.slug}}" required>
            
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{this.postagem.descricao}}" required>
            
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" required>{{this.postagem.conteudo}}</textarea>
            
            <label form="categoria">Categoria: </label>
            <select name="categoria" class="form-select" required>
                {{#each categorias}}
                    <option value="{{this._id}}">{{this.nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            
            <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
    </div>
</div>
