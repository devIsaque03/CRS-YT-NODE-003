<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{this.titulo}}</h4>
            <p>Descrição: {{this.descricao}}</p>
            <small>Data: {{this.date}}</small> <br>
            <small>Categoria: {{this.categoria}}</small><br>
            <a href="/admin/postagens/edit/{{this._id}}"><button class="btn btn-success mt-2">Editar postagem</button></a>
            <a href="/admin/postagens/deletar/{{this._id}}"><button class="btn btn-danger mt-2">Deletar postagem</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}