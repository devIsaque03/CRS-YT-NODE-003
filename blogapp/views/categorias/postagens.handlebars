<h1>{{categorias.nome}}</h1>

{{#each postagens}}
    <div class="card">
        <div class="card-body">
            <h3>{{this.titulo}}</h3>
            <p>{{this.descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais...</button></a>
            <hr></hr>
            <small>Data de publicação: {{this.data}}</small>
        </div>
    </div>
{{else}}
    <h5>Nenhuma postagem</h5>
{{/each}}